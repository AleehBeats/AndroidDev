            android:text="Alexinho"
            android:layout_width="122"
            android:layout_height="78"
            android:id="@+id/AnswerAlexinho" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="64dp"
            android:layout_marginStart="64dp" android:layout_marginBottom="244dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Skiller"
            android:layout_width="122"
            android:layout_height="78"
            android:id="@+id/AnswerSkiller" android:layout_marginBottom="244dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp" android:layout_marginRight="60dp"/>
