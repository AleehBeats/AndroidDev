<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="319dp"
            android:layout_height="48dp"
            android:inputType="number"
            android:ems="10"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.109" android:id="@+id/LineText"
    />
    <Button
            android:text="2"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:id="@+id/Two" app:layout_constraintStart_toEndOf="@+id/One"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="136dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="3"
            android:layout_width="91dp"
            android:layout_height="50dp"
            android:id="@+id/Three" app:layout_constraintStart_toEndOf="@+id/Two"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="136dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="4"
            android:layout_width="94dp"
            android:layout_height="50dp"
            android:id="@+id/Four" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/One"/>
    <Button
            android:text="5"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:id="@+id/Five" app:layout_constraintStart_toEndOf="@+id/Four"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/Two"/>
    <Button
            android:text="6"
            android:layout_width="88dp"
            android:layout_height="50dp"
            android:id="@+id/Six" app:layout_constraintStart_toEndOf="@+id/Five"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/Three"/>
    <Button
            android:text="7"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:id="@+id/Seven" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/Four" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="48dp" android:layout_marginStart="48dp"/>
    <Button
            android:text="8"
            android:layout_width="98dp"
            android:layout_height="50dp"
            android:id="@+id/Eight" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/Five" app:layout_constraintStart_toEndOf="@+id/Seven"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>
    <Button
            android:text="9"
            android:layout_width="89dp"
            android:layout_height="52dp"
            android:id="@+id/Nine" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/Six" app:layout_constraintStart_toEndOf="@+id/Eight"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <Button
            android:text="+"
            android:layout_width="144dp"
            android:layout_height="50dp"
            android:id="@+id/Plus" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/Divide" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="48dp" android:layout_marginStart="48dp"/>
    <Button
            android:text="-"
            android:layout_width="153dp"
            android:layout_height="46dp"
            android:id="@+id/Minus" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/Multiple" app:layout_constraintStart_toEndOf="@+id/Plus"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp"/>
    <Button
            android:text="/"
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:id="@+id/Divide" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp" android:layout_marginBottom="152dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="*"
            android:layout_width="148dp"
            android:layout_height="50dp"
            android:id="@+id/Multiple" app:layout_constraintStart_toEndOf="@+id/Divide"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp" android:layout_marginBottom="160dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:layout_width="132dp"
            android:layout_height="52dp"
            android:id="@+id/Clear" android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="52dp" android:layout_marginStart="52dp" android:text="ะก"/>
    <Button
            android:text="1"
            android:layout_width="99dp"
            android:layout_height="50dp"
            android:id="@+id/One" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp" android:layout_marginTop="136dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Zero" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/Eight" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="168dp" android:layout_marginStart="168dp"/>
    <Button
            android:text="="
            android:layout_width="149dp"
            android:layout_height="44dp"
            android:id="@+id/Equation" android:layout_marginBottom="88dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="44dp" android:layout_marginRight="44dp"/>
    <EditText
            android:layout_width="103dp"
            android:layout_height="39dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/SaveText" android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="52dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="52dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>